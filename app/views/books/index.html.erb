
 <h1>New books</h1>


  <table>
   <th>title</th>
   <th>body</th>
   <% @books.each do |list| %>
    <tr>
      <td><span><%= list.title %></span></td>
 　    <td><span><%= list.body %></span></td>
      <td><span><%= link_to "Show" , book_path(list.id), method: :get %></span></td>
      <td><span><%= link_to "Edit", edit_book_path(list.id), method: :get %></span></td>
      <td><span><%= link_to "Destroy", book_path(list.id), method: :delete,  "data-confirm" => "Are you sure？" %></span></td>
   　</tr>
    　<% end %>
    </table>
 
  <h3>New Books</h3>
   <%= form_with model: @book do |f| %>
    <h4>Title</h4>
     <%= f.text_field :title %>

    <h4>Body</h4>
     <%= f.text_area :body %>

    <div class="c"><%= f.submit 'Create Books' %></div>
    
    <% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
   <% end %>
   
   <% end %>

